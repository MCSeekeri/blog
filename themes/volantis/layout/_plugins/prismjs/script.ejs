<% (theme.plugins.prismjs.js||[]).forEach(function(item) { %>
  <%- js(item) %>
<% }) %>
<% (theme.plugins.prismjs.css||[]).forEach(function(item) { %>
  <%- css(item) %>
<% }) %>
<% if(theme.plugins.prismjs.copy_code){ %>
<script>
  function pjax_prismjs(){
    if (!document.querySelector("pre")) {
      return;
    }
    let pres = document.querySelectorAll("pre")
    pres.forEach(pre=>{
      var wrapper = document.createElement('div');
      wrapper.classList.add('code-toolbar');
      pre.parentNode.insertBefore(wrapper, pre);
      wrapper.appendChild(pre);
    })
    VolantisApp.copyCode(".code-toolbar pre")
  }
  pjax_prismjs()
  volantis.pjax.push(pjax_prismjs)
</script>
<% } %>